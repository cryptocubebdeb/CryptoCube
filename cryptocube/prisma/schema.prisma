generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  username     String? @unique
  firstName    String?
  lastName     String?
  passwordHash String?
  phoneNumber  String?

  accounts         Account[]
  sessions         Session[]
  resetToken       PasswordResetToken?
  watchlistItems   WatchlistItem[]
  simulatorAccount SimulatorAccount?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  ext_expires_in    Int?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  userId          String   @id // <- this makes it unique + PK
  resetToken      String
  tokenValidFrom  DateTime @default(now())
  tokenValidUntil DateTime @default(dbgenerated("now() + interval '1 hour'"))

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WatchlistItem {
  id      Int      @id @default(autoincrement())
  userId  String
  coinId  String
  addedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, coinId])
}

model SimulatorAccount {
  id Int @id @default(autoincrement())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  initialCashBalance Decimal @db.Decimal(18, 2)
  currentCashBalance Decimal @db.Decimal(18, 2)
  realizedProfitUsd  Decimal @default(0) @db.Decimal(18, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  portfolio    Portfolio[]
  orders       Order[]
  tradeHistory TradeHistory[]
}

model Portfolio {
  id                 Int              @id @default(autoincrement())
  simulatorAccountId Int
  simulatorAccount   SimulatorAccount @relation(fields: [simulatorAccountId], references: [id], onDelete: Cascade)

  coinSymbol           String
  amountOwned          Decimal @db.Decimal(38, 18)
  averageEntryPriceUsd Decimal @db.Decimal(18, 8)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([simulatorAccountId, coinSymbol])
}

model Order {
  id                 Int              @id @default(autoincrement())
  simulatorAccountId Int
  simulatorAccount   SimulatorAccount @relation(fields: [simulatorAccountId], references: [id], onDelete: Cascade)

  coinSymbol String
  orderType  TradeType
  orderKind  OrderKind
  amount     Decimal     @db.Decimal(38, 18)
  price      Decimal?    @db.Decimal(18, 8)
  status     OrderStatus @default(PENDING)

  createdAt  DateTime  @default(now())
  executedAt DateTime?

  tradeHistory TradeHistory? @relation("OrderTradeHistory")

  @@index([coinSymbol])
}

model TradeHistory {
  id                 Int              @id @default(autoincrement())
  simulatorAccountId Int
  simulatorAccount   SimulatorAccount @relation(fields: [simulatorAccountId], references: [id], onDelete: Cascade)

  orderId Int?   @unique
  order   Order? @relation("OrderTradeHistory", fields: [orderId], references: [id])

  tradeType    TradeType
  coinSymbol   String
  amountTraded Decimal   @db.Decimal(38, 18)
  tradePrice   Decimal   @db.Decimal(18, 8)
  tradeTotal   Decimal   @db.Decimal(18, 2)
  executedAt   DateTime  @default(now())

  @@index([coinSymbol])
}

enum TradeType {
  BUY
  SELL
}

enum OrderKind {
  MARKET
  LIMIT
}

enum OrderStatus {
  PENDING
  EXECUTED
  CANCELLED
  EXPIRED
}
